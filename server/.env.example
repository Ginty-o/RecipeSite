# Server
PORT=3000
NODE_ENV=development

# Postgres
DATABASE_URL=postgresql://recipe:recipe@localhost:5432/recipe

# Auth
JWT_SECRET=replace-me-with-a-long-random-string
JWT_EXPIRES_IN=7d

# In dev, the Vite dev server runs on 5173
CORS_ORIGIN=http://localhost:5173

# Cloudinary (optional but recommended for hosting)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=recepies

# Optional: auto-create admin user on startup if missing
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
