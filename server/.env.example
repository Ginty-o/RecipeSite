# Server
PORT=3000
NODE_ENV=development

# Postgres
DATABASE_URL=postgresql://recipe:recipe@localhost:5432/recipe

# Auth
JWT_SECRET=replace-me-with-a-long-random-string
JWT_EXPIRES_IN=7d

# In dev, the Vite dev server runs on 5173
CORS_ORIGIN=http://localhost:5173

# Cloudinary (optional but recommended for hosting)
# Option A: single URL
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
#
# Option B: separate fields
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=recepies

# Google Cloud Storage (optional alternative to Cloudinary)
# Create a bucket, then set bucket IAM to allow public reads if you want simple public URLs.
GCS_BUCKET=recepie_site
GCS_FOLDER=Photos
# Option A (recommended on Render): paste the full service account JSON into one env var
GCP_SERVICE_ACCOUNT_JSON=
# Option B: use a credentials file path (mostly for local/dev)
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# Optional: auto-create admin user on startup if missing
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
